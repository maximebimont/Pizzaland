INSERT INTO ingredients VALUES (11,'oeufs');

create table pizzasVide( 
id int, 
name text, 
type text, 
prix int,
constraint pk_id primary key(id)
);


CREATE TABLE pizzas(
idPizza int, 
idIngredient int, 
constraint pk_pizzas primary key(idPizza, idIngredient),
constraint fk_idPizza foreign key(idPizza) references pizzasVide(id) on update cascade on delete cascade,
constraint fk_idIngredient foreign key(idIngredient) references ingredients(id) on update cascade on delete cascade
);