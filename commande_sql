create table pizzasVide( 
pid int, 
name text, 
type text, 
prix real,
constraint pk_pid primary key(pid)
);

insert into pizzasVide values (1,'reine','brisé',9);
insert into pizzasVide values (2,'margarita','brisé',8);
insert into pizzasVide values (3,'napolitaine','brisé',10);

CREATE TABLE pizzas(
idPizza int, 
idIngredient int, 
finalPrice real,
constraint pk_pizzas primary key(idPizza, idIngredient),
constraint fk_idPizza foreign key(idPizza) references pizzasVide(pid) on update cascade on delete cascade,
constraint fk_idIngredient foreign key(idIngredient) references ingredients(iid) on update cascade on delete cascade
);

